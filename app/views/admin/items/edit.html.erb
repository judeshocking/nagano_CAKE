<div class="container my-5">
  <div class="row">
    <h2>商品編集</h2>
  </div>

  <div class="row d-flex justify-content-center">
    <span><%= flash[:notice] %></span>
  </div>

<%= form_with model: [:admin, @item], local: true do |f| %>
    <div class="row mt-5">
      <div class="col-sm-4">
        <%= f.label :商品画像 %>
        <%= f.file_field :image,accept: "image/*" %>
      </div>
      <div class="col-sm-5">
        <div class="form-group row">
          <%= f.label :商品名, class:"col-sm-4" %>
          <%= f.text_field :name, class:"form-control col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :商品説明, class:"col-sm-4" %>
          <%= f.text_area :introduction, class:"form-control col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :ジャンル, class:"col-sm-4" %>
          <%= f.collection_select :genre_id,Genre.all,:id,:name, prompt: "選択", class:"form-control col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :税抜価格, class:"col-sm-4" %>
          <%= f.text_field :price,class:"form-control col-sm-8" %><span class="d-block">円</span>
        </div>
        <div class="form-group row">
          <%= f.label :販売ステータス, class: "col-sm-4" %>
          <%= f.select :is_active, [["販売可", "販売可"], ["販売不可","販売不可"]], class: "form-control col-sm-8" %>
        </div>
        <div class="col-sm-2 mt-auto ml-5">
          <%= f.submit :編集, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>