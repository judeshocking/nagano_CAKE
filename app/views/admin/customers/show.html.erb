<div class="container my-5">
  <div class="row">
    <h2>会員情報　詳細</h2>
  </div>

  <div class="row mt-3">
    <div class="offset-sm-1 col-sm-8">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @custmoer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @custmer.last_name %>
                <%= @custmer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @custmer.last_name_kana %>
                <%= @custmer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @custmer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @custmer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @custmer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @custmer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <%= if @customer.is_enabled == true %>
              <div class="bg-info d-inline text-white p-1 ml-3 rounded">
                有効
              </div>
            <% else %>
              <div class="bg-warning d-inline text-white p-1 ml-3 rounded">
                退会
              </div>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-sm-3 my-auto">
      <link_to "編集する", edit_admin_customer_path,class:"btn btn-primary" %>
    </div>
  </div>
</div>