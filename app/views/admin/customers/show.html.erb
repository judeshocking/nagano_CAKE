<div class="container my-5">
  <div class="row">
    <h2>会員情報　詳細</h2>
  </div>

  <div class="row mt-4">
    <div class="offset-sm-1 col-sm-7">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %>
                <%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana %>
                <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td><% if @customer.is_deleted == true %>
                  <div class="bg-info d-inline text-white p-1 ml-3 rounded">
                  有効
                  </div>
                  <% else %>
                  <div class="bg-warning d-inline text-white p-1 ml-3 rounded">
                  退会
                  </div>
                <% end %>
              </td>
          </tr>
        </tbody>
      </table>
      <div class="col-sm-3 mx-auto">
        <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>