<div class="container my-5">
  <div class="row">
    <h2>ジャンル一覧・追加</h2>
  </div>

  <div class="row mt-3">
    <div class="col-sm-9">
      <strong>ジャンル名</strong>
    </div>

    <div class="offset-sm-2">
      <% if flash[:genre_created_error] %>
        <span class="text-danger"><%= flash[:genre_created_error] %></span>
      <% end %>
    </div>

    <%= form_with model: [:admin, @genre], local: true do |f| %>
    <div class="offset-sm-2">
      <%= f.text_field :name,class: "form-control" %>
    </div>

    <div class="offset-sm-2">
      <%= f.submit "新規登録", class: "btn btn-primary mt-3 mx-auto" %>
    </div>
    <% end %>
  </div>

  <div class="row mt-3">
    <div class="offset-sm-1 col-sm-10">
      <table class="table table-striped table-hover text-center">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集", edit_admin_genre_path(@genres.ids), class: "btn btn-primary btn-sm" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>