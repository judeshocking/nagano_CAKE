<div class="container my-5">
  <div class="row">
    <h2>ジャンル一覧・追加</h2>
  </div>

  <div class="row mt-5">
    <div class=""offset-sm-1 col-sm-4"">
      <div class="form-wrap border rounded p-5">
        <div class="row d-flex justify-content-center">
          <strong>新規ジャンル登録</strong>
        </div>

        <div class="row d-flex justify-content-center">
          <% if flash[:genre_created_error] %>
            <span class="text-danger"><%= flash[:genre_created_error] %></span>
          <% end %>
        </div>

         <%= form_with model: [:admin, @genre], local: true do |f| %>
        <div class="form-group">
          <%= f.text_field :name,class: "form-control" %>
        </div>
        <div class="form-check">
          <%= f.radio_button :is_enabled, :true %>
          <%= f.label :is_enabled, "有効" %>
          <%= f.radio_button :is_enabled, :false %>
          <%= f.label :is_enabled, "無効" %>
        </div>

        <div class="row">
          <%= f.submit "追加", class: "btn btn-primary mt-3 mx-auto" %>
        </div>
            <% end %>

        <table class="table table-bordere">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th>ステータス</th>
              <th colspan="1"></th>
            </tr>
          </thead>

          <tbody>
            <% @genres.each do |genre| %>
             <tr>
               <td><%= genre.name %></td>
               <td>
                 <% if genre.is_enabled == true %>
                  有効
                 <% else %>
                  無効
                 <% end %>
               </td>
               <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-primary btn-sm" %></td>
             </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>