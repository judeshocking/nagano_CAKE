<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <strong class="navbar-brand"><%= link_to 'NaganoCake', root_path %></strong>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <!--adominログイン時-->
              <% if admin_signed_in? %>
                <li class="nav-item">
                  <%= link_to admin_items_path do %>
                  <i>商品一覧</i>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to  admin_customers_path do %>
                  <i>会員一覧</i>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to admin_root_path do %>
                  <i>注文履歴一覧</i>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to admin_genres_path do %>
                  <i>ジャンル一覧</i>
                  <% end %>
                </li>
                <li clas="nav-item">
                  <%= link_to destroy_admin_session_path,method: :delete do %>
                  <i>ログアウト</i>
                  <% end %>
                </li>
              <!--会員ログイン時-->
              <% elsif customer_signed_in?  %>
                <li class="nav-item">
                  <%= link_to customer_path(current_customer) do %>
                  <i>マイページ</i>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to items_path do %>
                  <i>商品一覧</i>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to cart_items_path do %>
                  <i>カート</i>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to destroy_customer_session_path,method: :delete do %>
                  <i>ログアウト</i>
                  <% end %>
                </li>
              <!--ログイン前-->
              <% else %>
                <li class="nav-item">
                  <%= link_to about_path do %>
                  <i>About</i>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to items_path do %>
                  <i>商品一覧</i>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_customer_registration_path do %>
                  <i>新規登録</i>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to customer_session_path do %>
                  <i>ログイン</i>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

  <body>
    <%= yield %>
  </body>
</html>
