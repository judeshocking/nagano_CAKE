<div class="container my-5">
    <div class="row">
      <h2>注文情報確認</h2>
    </div>

    <div class="row">
      <div class="offset-sm-1 col-sm-10">
        <table class="table table-striped table-hover text-center">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @cart_items.each do |cart_item| %>
              <tr>
                <td><%= attachment_image_tag cart_item.item, :image, :fill, 100, 100, format: 'jpeg', fallback: 'no_image.jpeg', size: '50x50' %>
                    <span><%= cart_item.item.name %></span>
                </td>
                <td><%= cart_item.item.with_tax_price %></td>
                <td><%= cart_item.amount %></td>
                <td><%= cart_item.subtotal %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <div class="row">
        <div class="col-sm-4">
          <table class="table table-bordered">
            <% @cart_items.each do |cart_item| %>
            <tr><th>送料</th><td><strong>800</td></tr>
            <tr><th>商品合計</th><td><%= cart_item.subtotal %></td></tr>
            <tr><th>請求金額</th><td><%= @total = cart_item.subtotal + 800 %></td></tr>
            <% end %>
          </table>
        </div>
      </div>
      <table class="table table-bordered">

        <tr><th>お支払い方法</th><td><%= @order.payment_method %></td></tr>
        <tr><th>お届け先</th><td><%= "〒#{@order.postal_code}  #{@order.address}" %><br><%= @order.name %></td></tr>
      </table>
      <%= form_with model: @order,  local:true do |f| %>
        <div class="text-center">
          <%= f.submit "注文を確定する", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>