<div class="container my-5">
  <div class="row">
    <h2>注文履歴一覧</h2>
  </div>

  <div class="row mt-3">
    <div class="offset-sm-1 col-sm-10">
      <table class="table table-striped table-hover text-center">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td><%=  "〒#{order.postcode}" %><br><%= order.address %><br><%= name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>