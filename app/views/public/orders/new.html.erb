<div class="container my-5">
  <div class="row">
    <h2>注文情報入力</h2>
  </div>

  <div class="row mt-5">
    <div class="offset-sm-1 col-sm-7">
      <strong>支払方法</strong>
    </div>
  </div>

    <%= form_with model: [:public, @order], local: true do |f| %>
    <div class="row mt-3">
      <div class="offset-sm-2">
        <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
        <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%>
      </div>
    </div>

    <div class="row mt-4">
      <div class="offset-sm-1 col-sm-7">
        <strong>お届け先</strong>
      </div>
    </div>
    <div class="row mt-3">
      <div class="offset-sm-2">
        <%= f.radio_button :select, :address %>
        <%= f.label :select, "ご自身の住所" %>
          <p><%= @custome.postal_code %>  <%= @custome.address %></p>
          <p><%= @custome.last_name %>  <%= @custome.first_name %></p>
        <%= f.radio_button :select, :address %>
        <%= f.label :select, "登録済住所から選択" %>
          <p><%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %></p>
        <%= f.radio_button :select, :address %>
        <%= f.label :select, "新しいお届け先" %>
        <div class="col-mb-3">
          <div class="form-group row">
            <%= f.label :郵便番号（ハイフンなし）, class:"col-sm-4" %>
            <%= f.text_field :postal_code, class:"form-control col-sm-8" %>
          </div>
          <div class="form-group row">
            <%= f.label :住所, class:"col-sm-4" %>
            <%= f.text_field :addreds, class:"form-control col-sm-8" %>
          </div>
          <div class="form-group row">
            <%= f.label :宛名, class:"col-sm-4" %>
            <%= f.text_field :name, class:"form-control col-sm-8" %>
          </div>
          <div class="col-sm-2 mt-auto ml-5">
            <%= f.submit :確認画面へ進む, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
</div>