<div class="container my-5">
  <div class="row">
    <h2>注文情報入力</h2>
  </div>

  <div class="row mt-5">
    <div class="offset-sm-1 col-sm-7">
      <strong>支払方法</strong>
    </div>
  </div>

    <%= form_with model: [ @order], url: orders_confirm_path, local: true do |f| %>
    <div class="row mt-3">
      <div class="offset-sm-2">
        <%= f.radio_button :payment_method, 'credit_card'  %>
        <%= f.label :payment_method_credit_card, 'クレジットカード' %>
        <%= f.radio_button :payment_method, 'transfer'  %>
        <%= f.label :payment_method_transfer, '銀行振込'%>
      </div>
    </div>

    <div class="row mt-3">
      <div class="offset-sm-1 col-sm-10">
        <strong>お届け先</strong>
      </div>
    </div>
    <div class="row mt-3">
      <div class="offset-sm-2">
        <%= f.radio_button :select, "0" %>
        <%= f.label :select, "ご自身の住所" %>
          <p><%= @custome.postal_code %>  <%= @custome.address %></p>
          <p><%= @custome.last_name %>  <%= @custome.first_name %></p>
        <%= f.radio_button :select, "1" %>
        <%= f.label :select, "登録済住所から選択" %>
          <p><%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %></p>
        <%= f.radio_button :select, "2" %>
        <%= f.label :select, "新しいお届け先" %>
      </div>
    </div>
    <div class="row">
      <div class="my-3 offset-sm-2 col-sm-9">
        <div class="form-group row">
          <%= f.label :郵便番号（ハイフンなし）, class:"col-sm-4" %>
          <%= f.text_field :postal_code, class:"form-control col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :住所, class:"col-sm-4" %>
          <%= f.text_field :address, class:"form-control col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :宛名, class:"col-sm-4" %>
          <%= f.text_field :name, class:"form-control col-sm-8" %>
        </div>
        <div class="col-sm-2 mx-auto ml-5">
          <%= f.submit :確認画面へ進む, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <% end %>
</div>