<div class="container my-5">
  <div class="row">
    <h2>会員情報編集</h2>
  </div>

  <div class="row mt-3 flex-column align-items-center">
    <%= form_with(model:@customer, url:customer_path, local: true ,method: :put) do |f| %>

    <div class="form-group row">
      <%= f.label :名前, class:"col-sm-4" %>
      <div class="row">
        <%= f.text_field :last_name, placeholder:"令和",class:"form-control col-sm-6" %>
        <%= f.text_field :first_name, placeholder:"道子",class:"form-control col-sm-6" %>
      </div>
      <%= f.label :カナ, class:"col-sm-4" %>
      <div class="row">
        <%= f.text_field :last_name_kana, placeholder:"レイワ",class:"form-control col-sm-6" %>
        <%= f.text_field :first_name_kana, placeholder:"ミチコ",class:"form-control col-sm-6" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :郵便番号（ハイフンなし）, class:"col-sm-4" %>
      <%= f.text_field :postal_code, placeholder:"0000000",class:"form-control col-sm-8" %>
    </div>

    <div class="form-group row">
      <%= f.label :住所, class:"col-sm-4" %>
      <%= f.text_field :address, placeholder:"東京都品川区大崎0-0-0",class:"form-control col-sm-8" %>
    </div>

    <div class="form-group row">
      <%= f.label :電話番号（ハイフンなし）, class:"col-sm-4" %>
      <%= f.text_field :telephone_number, placeholder:"0000000000",class:"form-control col-sm-8" %>
    </div>

　　<div class="form-group row">
      <%= f.label :メールアドレス, class:"col-sm-4" %>
      <%= f.text_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@sample.com",class:"form-control col-sm-8" %>
    </div>


    <div class="col-lg-10 text-center">
      <%= f.submit "編集内容を保存", class: "btn btn-primary" %>
      <%= link_to '退会する', quit_path, class: "glyphicon glyphicon-tint btn btn-danger"%>
    </div>
    <% end %>
  </div>
</div>
