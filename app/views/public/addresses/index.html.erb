<div class="container my-5">
  <div class="row">
    <h2>配送先登録/一覧</h2>
  </div>
  <div class="row">
    <div class="my-3 offset-sm-1 col-sm-8">
      <%= form_with model: @address, local: true do |f| %>
        <div class="form-group row">
          <%= f.label :郵便番号（ハイフンなし）, class:"col-sm-4" %>
          <%= f.text_field :postal_code,placeholder:"0000000",class: "form-control col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :住所, class:"col-sm-4" %>
          <%= f.text_field :address,placeholder:"東京都品川区大崎0-0-0",class: "form-control col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :宛名, class:"col-sm-4" %>
          <%= f.text_field :name,placeholder:"令和道子",class: "form-control col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.submit "登録する", class: "btn btn-success px-4 mb-2 mx-auto" %>
        </div>
      <% end %>

      <div class="row">
        <div class="col-sm-12">
          <table class="table table-bordered">
            <thead class="table-active">
              <tr>
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @addresses.each do |address| %>
                <tr>
                  <td><%= address.postal_code %></td>
                  <td><%= address.address %></td>
                  <td><%= address.name %></td>
                  <td><%= link_to "編集する", edit_address_path(address), class:"btn btn-success" %>
                      <%= link_to "削除する", @address, method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>